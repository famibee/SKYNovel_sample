{
	"name": "skynovel.sample",
	"version": "1.0.0",
	"description": "SKYNovel simple sample project",
	"main": "app.js",
	"appBundleId": "com.fc2.blog.famibee.skynovel.skynovel.sample",
	"appCopyright": "(c)famibee",
	"author": "famibee",
	"license": "MIT",
	"dependencies": {
		"about-window": "^1.13.1",
		"crypto-js": "^3.1.9-1",
		"skynovel": "^0.6.12"
	},
	"devDependencies": {
		"@types/node": "^12.7.3",
		"css-loader": "^3.2.0",
		"electron": "^6.0.6",
		"electron-builder": "^21.2.0",
		"imagemin-webpack-plugin": "^2.4.2",
		"style-loader": "^1.0.0",
		"webpack": "^4.39.3",
		"webpack-cli": "^3.3.7",
		"webpack-dev-server": "^3.8.0"
	},
	"scripts": {
		"install": "npm run webpack:dev",
		"start": "electron ./",
		"web": "npm run watch:wds",
		"webpack:dev": "webpack --mode development --config ./core/webpack.config.js",
		"webpack:dev:w": "webpack --mode development --watch --config ./core/webpack.config.js",
		"watch:wds": "webpack-dev-server --config ./core/wds.config.js",
		"upd": "npx ncu -a && npm update",
		"npm_check_updates": "ncu",
		"npm_check_updates -g": "ncu -g",
		"npm_check_updates_do": "ncu -a && npm update && npm i -D",
		"webpack:pro": "webpack --mode production --config ./core/webpack.config.js",
		"pack:win": "npm run webpack:pro && electron-builder ./build/win32-x64 --win --x64",
		"pack:mac": "npm run webpack:pro && electron-builder ./build/darwin-x64 --mac --x64"
	},
	"build": {
		"appId": "com.fc2.blog.famibee.skynovel.skynovel.sample",
		"productName": "simple sample",
		"directories": {
			"output": "build"
		},
		"files": [
			"app/",
			"app.js",
			"prj/",
			"build/icon/*"
		],
		"dmg": {
			"contents": [
				{
					"x": 410,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 150,
					"type": "file"
				}
			]
		},
		"mac": {
			"icon": "build/icon/icon.icns",
			"target": [
				"dmg"
			],
			"category": "public.app-category.games"
		},
		"win": {
			"icon": "build/icon/icon.ico",
			"target": "nsis"
		},
		"linux": {
			"icon": "build/icon",
			"target": [
				"deb",
				"rpm"
			],
			"category": "Network"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:famibee/SKYNovel_sample.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel_sample/issues",
		"email": "famibee@gmail.com"
	},
	"homepage": "https://famibee.blog.fc2.com/"
}
